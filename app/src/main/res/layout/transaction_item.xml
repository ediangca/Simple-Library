<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="12">

        <ImageView
            android:id="@+id/profilePic"
            android:src="@drawable/profile_icon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:background="@drawable/profile_icon_bg"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/borrowDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:text="FULLNAME"
            android:textStyle="bold|italic"
            android:layout_weight="7.5" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center"
            android:background="@drawable/primary_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/vector_edit"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnReturn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/success_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/vector_check"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnRemove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/danger_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/vector_delete"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>